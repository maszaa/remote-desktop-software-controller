extends base.pug

block scripts
    script(src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js" type="application/javascript")
    script(type="application/javascript")
        include js/window.js

block content
    div.row
        div.column
            h1.software-window #{window.software.name}: #{window.title}
        div.column
            a(href="/admin/logout/")
                i.material-icons lock_open
            a(href="/admin/")
                i.material-icons settings
            a(href="/")
                i.material-icons menu

    div.row
        div.column
            h4="Last command: "
                span#command-ok N/A
                span#command-error

            each command_group in window.command_groups.all
                h4=command_group.name

                div.grid
                    each command in command_group.commands.all
                        button(onclick=("sendCommand('" + command.name + "')"))=command.name

        div.column
            h4="Status"

            img(id="screenshot" src="screenshot/" onclick="sendCommand(event)" alt="Screenshot of the state of the window. If not visible the system may not function properly.")
